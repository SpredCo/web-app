  %div.row
    %div.col-xs-offset-1.col-xs-10
      %div.panel.panel-default
        %div.panel-body
          %div.col-xs-3.vmiddle
            %p.semibold
              %img{ 'src' => user['picture_url'] || 'img/gary_gravatar.pgn', 'class' => 'profile-pic' }
              #{user['first_name']} #{user['last_name']}
