  %div.row
    %div.col-xs-offset-1.col-xs-10
      %div.panel.panel-default
        %div.panel-body
          %p.subtitle.semibold
            Mes dernières conférences
          %div.col-xs-4.text-center.vmiddle.video-card
            %img{ 'src' => 'img/crevette-vivante-gip7.jpg', 'class' => 'video-img' }
