%div.feed-menu-container
  %div.row
    %div.col-sm-4.col-sm-push-4.feed-menu
      %div.row
        - if @active == :welcome
          %div.col-sm-2.col-sm-push-3.feed-active{style: 'text-align: right;'}
            %a{href: '/'} Accueil
        - else
          %div.col-sm-2.col-sm-push-3{style: 'text-align: right;'}
            %a{href: '/'} Accueil
        - if @active == :trending
          %div.col-sm-2.col-sm-push-3.feed-active{style: 'text-align: center;'}
            %a{href: '/feed/trending'} Tendances
        - else
          %div.col-sm-2.col-sm-push-3{style: 'text-align: center;'}
            %a{href: '/feed/trending'} Tendances
        - if session[:spred_tokens].is_a? TokenBox
          - if @active == :subscription
            %div.col-sm-2.col-sm-push-3.feed-active{style: 'text-align: left;'}
              %a{href: '/feed/subscriptions'} Abonnements
          - else
            %div.col-sm-2.col-sm-push-3{style: 'text-align: left;'}
              %a{href: '/feed/subscriptions'} Abonnements
