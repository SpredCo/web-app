%div.container.main-content
  %div.spredcast-grp
    %h4 Casts
    - @result[:casts].each_slice(4) do |casts|
      %div.row.casts-row
      - casts.each do |cast|
        %div.col-sm-3
          %a.cast-name{ href: cast['real_url'], title: cast['name'] }= cast['name']
  %br
  %hr
  %div.user-grp
    %h4 Users
    - @result[:users].each_slice(4) do |users|
      %div.row.users-row
      - users.each do |user|
        %div.col-sm-3
          %a.cast-name{ href: user['real_url'], title: user['name'] }= user['name']
  %br
  %hr
  %div.tag-grp
    %h4 Tags
    - @result[:tags].each_slice(4) do |tags|
      %div.row.casts-row
      - tags.each do |tag|
        %div.col-sm-3
          %a.cast-name{ href: tag['real_url'], title: tag['name'] }= tag['name']

