%div
  %h3 Live
  %hr
    -if @casts_by_states['0'] != nil && !@casts_by_states['0'].empty?
      - @casts_by_states['0'].each_slice(2) do |casts|
        %div.row.casts-row
          - casts.each do |cast|
            %div.col-sm-6
              %div.row
                %div.col-sm-4
                  %div
                    %img.cast-picture{src: cast.cover_url}
                %div.col-sm-8
                  %div
                    %div
                      %span
                        %a.cast-name{ href: "#{request.base_url}/casts/#{cast.url}", title: cast.name }
                          = cast.name
                      %span by
                      %span
                        %a{ href: "#{request.base_url}/@#{cast.creator.pseudo}"}
                          = '@' + cast.creator.pseudo
                  %div.mine-description
                    %span= cast.description
    - else
      %h4 Aucun live disponible
  %div
    %h3 A Venir
    %hr
      -if @casts_by_states['1'] != nil && !@casts_by_states['1'].empty?
        - @casts_by_states['1'].each_slice(2) do |casts|
          %div.row.casts-row
            - casts.each do |cast|
              %div.col-sm-6
                %div.row
                  %div.col-sm-4
                    %div
                      %img.cast-picture{src: "#{request.base_url}/img/cast.png"}
                  %div.col-sm-8
                    %div
                      %div
                        %span
                          %a.cast-name{ href: "#{request.base_url}/casts/#{cast.url}", title: cast.name }
                            = cast.name
                        %span by
                        %span
                          %a{ href: "#{request.base_url}/@#{cast.creator.pseudo}"}
                            = '@' + cast.creator.pseudo
                    %div.mine-description
                      %span= cast.description
